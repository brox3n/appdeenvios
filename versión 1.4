                envio['peso'] = nuevoPeso
                envio['fecha'] = nuevaFecha
                print(f"Envío actualizado: {envio}")
                guardarEnArchivo(envios)  
                return
        print("Envío no encontrado")

    def eliminarEnvio():
        idEnvio = int(input("Ingrese el ID del envío que desea eliminar: "))
        for envio in envios:
            if envio['id'] == idEnvio:
                envios.remove(envio)
